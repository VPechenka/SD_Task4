{% extends 'base.html.twig' %}

{% block title %}
    Админ-удаление
{% endblock %}

{% block body %}
    <main class="main">
        <div class="container">
            <div class="card">
                <h2 class="card-title">
                    Удалить скрытые записи
                </h2>

                <form method="POST">
                    <button type="submit" class="btn btn-primary">
                        Удалить
                    </button>
                </form>

                {% if result %}
                <div class="notification success">
                    <span class="notification-icon">✓</span>
                    <span>
                        Ссылки успешно удалены
                    </span>
                </div>
                {% endif %}

            </div>
        </div>
    </main>
{% endblock %}
